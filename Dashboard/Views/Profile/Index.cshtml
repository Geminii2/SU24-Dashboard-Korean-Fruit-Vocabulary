@model BusinessObject.Models.Admin

@{
    ViewData["Title"] = "Detail";
    Layout = "_Dashboard";

}

<div class="container">
    <main role="main" class="pb-3">
        <div class="card shadow mb-4">
            @* <div class="card-header py-3">
                <h2 class="m-0 font-weight-bold text-black">Detail</h2>
            </div> *@
            <div class="card-body ">
                <div class="row">
                    <div class="text-center">
                        @if (Model.Avatar_img != "")
                        {
                            <img src="@Model.Avatar_img" alt="Avatar" style="height:300px; width:300px;">
                        }
                        else
                        {
                            <img src="/images/bo-2.png" alt="Default Image" style="height:300px; width:300px;">
                        }
                        </div>
                    <div class="col-lg-6">
                        <form>
                            <div class="mb-3">
                                <label>Fullname </label>
                                <br />
                                <p>@Model.Fullname</p>
                            </div>
                            <div class="mb-3">
                                <label>Email </label>
                                <br />
                                <p>@Model.Email</p>
                            </div>
                            <div class="mb-3">
                                <label>Phone </label>
                                <br />
                                <p>+@Model.Phone</p>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-6">
                        <form>
                            <div class="mb-3">
                                <label>Gender </label>
                                <br />
                                <p>@Model.Gender</p>
                            </div>
                            <div class="mb-3">
                                <label> Birthday </label>
                                <br />
                                <p>@Model.Dob</p>
                            </div>
                            <div class="mb-3">
                                <label>Country </label>
                                <br />
                                <p>@Model.Country</p>
                            </div>
                        </form>
                    </div>
                    <a href="/Profile/Edit?id=@Model.Id" class="btn btn-info" style="text-decoration:none; color: white">Update Profile</a>
                    <a class="btn btn-danger" style="text-decoration:none; color: white" asp-controller="Account" asp-action="Index">Back to List</a>
                </div>
            </div>

        </div>
    </main>


</div>