@model BusinessObject.Models.Account

@{
    ViewData["Title"] = "Detail";
    Layout = "_Dashboard";

}

<div class="container">
    <main role="main" class="pb-3">
        <div class="card shadow mb-4">
            @* <div class="card-header py-3">
                <h2 class="m-0 font-weight-bold text-black">Detail</h2>
            </div> *@
            <div class="card-body ">
                <div class="row">
                <div class="text-center" >
                        @if (Model.Avatar != "")
                        {
                            <img src="@Model.Avatar" alt="Avatar" style="height:300px; width:300px;">

                        }else
                        {
                            <img src="/images/bo-2.png" alt="Avatar" style="height:300px; width:300px;">
                        }
                </div>
                <div class="col-lg-6">
                    <form>
                        <div class="mb-3">
                                <label>Fullname </label>
                                <p>@Model.Fullname</p>
                        </div>
                        <div class="mb-3">
                                <label>Email </label>
                                <p>@Model.Email</p>
                        </div>
                        <div class="mb-3">
                                <label>Phone </label>
                                <p>+@Model.Phone</p>
                        </div>
                     </form>
                </div>
                <div class="col-lg-6">
                    <form>
                        <div class="mb-3">
                                <label>Gender </label>
                                <p>@Model.Gender</p>
                        </div>
                        <div class="mb-3">
                                <label> Birthday </label>
                                <p>@Model.Dob</p>
                        </div>
                        <div class="mb-3">
                                <label>Country </label>
                                <p>@Model.Country</p>
                        </div>
                    </form>
                </div>
                    @if (Model.Status==2)
                    {
                        <a href="#" data-toggle="modal" data-target="#unbanModal" data-account-id="@Model.Id" class="btn btn-info" style="text-decoration:none; color: white; margin-bottom: 5px;">Unban Account</a>
                    }
                    <a class="btn btn-secondary" style="text-decoration:none; color: white" asp-action="Index">Close</a>
                </div>
            </div>
           
        </div>
    </main>
                
    
</div>

<div class="modal fade" id="unbanModal" tabindex="-1" role="dialog" aria-labelledby="unbanModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="unbanModalLabel">Confirm unban account</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Unban" below if you are ready to unban this element.</div>

            <div class="modal-footer">
                <form method="post" id="unbanForm" action="/Account/UnDelete">
                    <input type="hidden" name="id" value="@Model.Id">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-danger" type="submit">Unban</button>
                </form>
            </div>
        </div>
    </div>
</div>

