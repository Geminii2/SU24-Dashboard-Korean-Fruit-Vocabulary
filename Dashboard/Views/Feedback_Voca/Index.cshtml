@{
    ViewData["Title"] = "Index";
    Layout = "_Dashboard";
}
<style>
    div.dataTables_filter input {
        width: 1230px !important;
    }
</style>
<!-- Page Heading -->
<div class="container">
    <main role="main" class="pb-3">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h2 class="m-0 font-weight-bold text-black">FEEDBACKS VOCABULARY MANAGEMENT</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr class="">
                                <th class="text-center">Order</th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Vocabulary</th>
                                <th class="text-center">Description</th>
                                <th class="text-center">Created</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script type="text/javascript" defer>
        $(document).ready(function () {
            var stt = 1;
            $('#dataTable').DataTable({
                dom: "frtip",
                language: {
                    searchPlaceholder: "Search feedback",
                    search: ""
                },
                "ajax": {
                    "url": "/Feedback_Voca/GetData",
                    "tye": "GET",
                    "datatype": "json",

                },
                "columns": [
                    {
                        "data": "id",
                        "render": function (data, type, row) {
                            return stt++;
                        },
                        "className": "text-center"
                    },
                    { "data": "email" },
                    { "data": "vocabulary" },
                    {
                        "data": "description",
                        "render": function (data, type, row) {
                            return row.description.length > 50 ?
                                `<p>${row.description.slice(0, 47)}...</p>` :
                                `<p>${row.description}</p>`
                        }
                    },
                    { "data": "created"},
                    {
                        "data": "status",
                        "render": function (data, type, row) {
                            if (row.status == 1) return '<p class="text-warning">Waiting</p>';
                            if (row.status == 2) return '<p class="text-success">Reply</p>';
                        },
                        "className": "text-center"
                    },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return '<div class="text-center action-buttons">' +
                                '<a href="/Feedback_Voca/Reply?id=' + data.id + '" class="btn btn-success btn-square " style="margin-right: 8px"><i class="fa fa-pencil" aria-hidden="true"></i></a>' +
                                '<a href="/Feedback_Voca/Detail?id=' + data.id + '"class="btn btn-primary btn-square px-3 " style="margin-right: 8px"><i class="fa fa-info" aria-hidden="true"></i></a>' +
                                '</div>';
                        }
                    }

                ]
            });
            var table = $('#dataTable').DataTable();
            //setInterval(function () {
            //    table.ajax.reload();
            //}, 3000);
            // Lắng nghe sự kiện click trên nút "Delete"
        });
    </script>
}