@model BusinessObject.Models.General_Feedback

@{
    ViewData["Title"] = "Detail";
    Layout = "_Dashboard";

    DateTime createdDate;
    string formattedDate = DateTime.TryParse(Model.Created_date, out createdDate)
        ? createdDate.ToString("dd/MM/yyyy hh:mm tt")
        : Model.Created_date;
}

<div class="container">
    <main role="main" class="pb-3">
        <div class="card shadow mb-4">
            <div class="card-header py-3 text-center">
                <h2 class="m-0 font-weight-bold text-black">FEEDBACK DETAILS</h2>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label>Email</label>
                    <input type="text" class="form-control" value="@ViewData["Email"]" readonly />
                </div>
                <div class="mb-3">
                    <label>Type</label>
                    <input type="text" class="form-control" value="@Model.Type" readonly />
                </div>
                <div class="mb-3">
                    <label>Created</label>
                    <input type="text" class="form-control" value="@formattedDate" readonly />
                </div>
                <div class="row mb-3">
                    <div class="col-md-6 text-center">
                        <div class="form-group ">
                            <div class="text-left">
                                <label>Image</label>
                            </div>

                            <div class="border p-2">
                                <img src="@ViewData["Image"]" alt="Image" class="img-fluid" style="height:400px; width:300px;">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" rows="11" readonly style="height:420px; width:100%;">@Model.Description</textarea>
                        </div>
                    </div>
                </div>   
                    <div class="col-md-6 text-center">
                        <a class="btn btn-secondary btn-lg btn-block" asp-controller="General_Feedback" asp-action="Index">Close</a>
                    </div>
            </div>
        </div>
    </main>
</div>

<style>
    .card {
        border-radius: 10px;
        padding-left: 20px;
        padding-right: 20px;
    }

    .card-header {
        background-color: white;
    }

    .form-control[readonly] {
        background-color: white;
        border: 1px solid #ced4da;
    }

    .btn-block {
        width: 204%;
    }
</style>
