@{
    var accID = Context.Session.GetInt32("Id");
    var fullname = Context.Session.GetString("Fullname");
    var avatarImg = Context.Session.GetString("AvatarImg");
    var roleID = Context.Session.GetInt32("RoleID");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="description" content="Administrator page">
    <meta name="keywords" content="control, statistic, database">
    <meta name="author" content="Group4">

    <title>@ViewData["Title"] - Admin</title>

    <link rel="icon" type="image/png" href="~/images/bo.png" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <!-- Custom fonts for this template-->
    <link href="~/vendor/vendor-admin/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet" asp-append-version="true">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/custom.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/vendor-admin/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" asp-append-version="true">
</head>
<body id="page-top">
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <li class="sidebar-brand d-flex fle x-column align-items-center justify-content-center">
                <div class="sidebar-brand-text mx-3">
                    <img src="~/images/bo-2.png" alt="bo" width="50px" height="50px" />
                </div>
            </li>
            <li class="text-center ">
                <span class=" h3 text-white "> <b>Fruit Dictionary</b></span>
            </li>
            <!-- Divider -->
            <li>
                <hr class="sidebar-divider my-0">
            </li>

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <!-- Divider -->
            <li>
                <hr class="sidebar-divider">
            </li>
            @if (roleID == 1)
            {
                <!-- Nav Item - Admin -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Admins">
                        <i class="fas fa-fw fa-house-user"></i>
                        <span>Admin</span>
                    </a>
                </li>

                <!-- Divider -->
                <li>
                    <hr class="sidebar-divider">
            </li>
            }
            <!-- Nav Item - Users -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Index">
                    <i class="fas fa-fw fa-solid fa-globe-asia"></i>
                    <span>Users</span>
                </a>
            </li>

            <!-- Divider -->
            <li>
                <hr class="sidebar-divider">
            </li>

            <!-- Nav Item - Vocabulary -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Vocabulary" asp-action="Index">
                    <i class="fas fa-fw fa-solid fa-globe-asia"></i>
                    <span>Vocabularies</span>
                </a>
            </li>
            

            <!-- Divider -->
            <li>
                <hr class="sidebar-divider">
            </li>

            

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item active">
                <a class="nav-link active" href="#" data-toggle="collapse" data-target="#collapsePages" aria-expanded="true"
                   aria-controls="collapsePages">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Feedbacks</span>
                </a>
                <div id="collapsePages" class="collapse show" aria-labelledby="headingPages"
                     data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="General_Feedback" asp-action="Index">General</a>
                        <a class="collapse-item" asp-controller="Feedback_Voca" asp-action="Index">Vocabulary</a>
                    </div>
                </div>
            </li>

            <!-- Divider -->
            <li>
                <hr class="sidebar-divider d-none d-md-block">
            </li>


            <!-- Sidebar Toggler (Sidebar) -->
            <li class="text-center d-none d-md-inline">
                <div>
                    <button class="rounded-circle border-0" id="sidebarToggle"></button>
                </div>
            </li>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small"> @Context.Session.GetString("Fullname")</span>
                                @if (avatarImg == "")
                                {
                                    <img class="img-profile rounded-circle" src="/images/bo-2.png">
                                }else
                                {
                                    <img class="img-profile rounded-circle" src="@avatarImg">
                                }

                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <form class="dropdown-item" asp-controller="Authentication" asp-action="Logout" method="post">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    <button type="submit" class="btn btn-danger">Logout</button>
                                </form>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->

                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Fruit Dictionary - Administrator</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->
            </div>
        </div>
    </div>
                
                
                <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/vendor/vendor-admin/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/vendor/vendor-admin/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/vendor-admin/jquery-easing/jquery.easing.min.js" asp-append-version="true"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js" asp-append-version="true"></script>
    <!-- Page level plugins -->
    <script src="~/vendor/vendor-admin/chart.js/Chart.min.js" asp-append-version="true"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/chart-area-demo.js" asp-append-version="true"></script>
    <script src="~/js/demo/chart-pie-demo.js" asp-append-version="true"></script>

    <script src="~/vendor/vendor-admin/datatables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/vendor/vendor-admin/datatables/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/53a5dc75b7.js" crossorigin="anonymous" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>
